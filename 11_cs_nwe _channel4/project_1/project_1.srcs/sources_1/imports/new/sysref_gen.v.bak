`timescale 1ns / 1ps
//////////////////////////////////////////////////////////////////////////////////
//  div_cfg set the divider_factor of sysref
//  sysref_cnt defines the number of sysref generated after rst=1
//  v1.0, 20180714
//  by wdy
//////////////////////////////////////////////////////////////////////////////////

module sysref_gen(
input clk,
input rst,
input [7:0] div_cfg,
input [7:0] sysref_num,
output reg sysref
);

reg [7:0] cnt;
reg [7:0] sysref_cnt;

wire    [7:0]   div_num     ;

assign div_num    =   div_cfg >>  1   ;

always @(posedge clk) 
begin
	if (rst) 
	begin
		cnt <= 1;
		sysref_cnt <= 0;
		sysref <= 0;
	end
	else if(sysref_cnt < sysref_num && cnt  <   div_num-1)
	begin
	    cnt         <= cnt + 1'b1       ;
	    sysref_cnt  <= sysref_cnt       ;
	    sysref      <= 1'b0             ;
	end
	else if(sysref_cnt < sysref_num && cnt  <   div_cfg)
	begin
	    cnt         <= cnt + 1'b1       ;
	    sysref_cnt  <= sysref_cnt       ;
	    sysref      <= 1'b1             ;
	end	
	else if(sysref_cnt < sysref_num && cnt  ==   div_cfg)
	begin
	    cnt         <= 1'b1                 ;
	    sysref_cnt  <= sysref_cnt + 1'b1    ;
	    sysref      <= 1'b1                 ;
	end	
	else
	begin
		cnt <= 1;
		sysref_cnt <= sysref_cnt;
		sysref <= 0;
	end	
end    

endmodule
